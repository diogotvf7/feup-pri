{
	"add-field-type": [
        {
            "name":"regular_text",
            "class":"solr.TextField",
            "indexAnalyzer":{
                "tokenizer":{
                    "class":"solr.StandardTokenizerFactory"
                },
                "filters":[
                    {"class":"solr.ASCIIFoldingFilterFactory", "preserveOriginal":true},
                    {"class":"solr.LowerCaseFilterFactory"},
                    {"class":"solr.PorterStemFilterFactory"},
                    {"class":"solr.SynonymGraphFilterFactory", "synonyms": "my_synonyms.txt", "ignoreCase": true, "expand": true},
                    {"class":"solr.FlattenGraphFilterFactory"}

                ]
            },
            "queryAnalyzer":{
                "tokenizer":{
                    "class":"solr.StandardTokenizerFactory"
                },
                "filters":[
                    {"class":"solr.ASCIIFoldingFilterFactory", "preserveOriginal":true},
                    {"class":"solr.LowerCaseFilterFactory"},
                    {"class":"solr.PorterStemFilterFactory"},
                    {"class":"solr.SynonymGraphFilterFactory", "synonyms": "my_synonyms.txt", "ignoreCase": true, "expand": true}
                ]
            }
        },
        {
            "name": "text_phonetic",
            "class": "solr.TextField",
            "indexAnalyzer": {
                "tokenizer": {"class": "solr.StandardTokenizerFactory"},
                "filters": [
                    {"class": "solr.LowerCaseFilterFactory"},
                    {"class": "solr.PhoneticFilterFactory", "encoder": "DoubleMetaphone", "inject": "false"}
                ]
            },
            "queryAnalyzer": {
                "tokenizer": {"class": "solr.StandardTokenizerFactory"},
                "filters": [
                    {"class": "solr.LowerCaseFilterFactory"},
                    {"class": "solr.PhoneticFilterFactory", "encoder": "DoubleMetaphone", "inject": "false"}
                ]
            }
        },
        {
            "name": "date_field",
            "class": "solr.DatePointField"
        }
    ],
    "add-field": [
        {
            "name": "body",
            "type": "regular_text",
            "indexed": true
        },
        {
            "name": "title",
            "type": "regular_text",
            "indexed": true
        },
        {
            "name":"created_at",
            "type": "date_field"
        },
        {
            "name":"stocks_changes_value",
            "type": "pdoubles",
            "multiValued": true
        },
        {
            "name":"stock_changes_name",
            "type": "text_en",
            "multiValued": true
        },
        {
            "name":"sentiment_compound",
            "type": "pdoubles"
        },
        {
            "name":"authors",
            "type": "text_phonetic",
            "indexed": true,
            "multiValued": true
        }
    ]
}
